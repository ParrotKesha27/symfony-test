{% extends 'base.html.twig' %}

{% block title %}Blog posts{% endblock %}

{% block body %}
    <form class="form-inline my-2 my-lg-0" action="{{ path('blog_search') }}" method="get">
        <input class="form-control mr-sm-2" type="search" aria-label="Search" name="title">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Найти</button>
    </form>
    <ul class="list-group">
        {% for post in posts %}
            <li class="list-group-item"><a href="{{ path('blog_show', {'slug': post.slug}) }}">{{ post.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
